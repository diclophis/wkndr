#!/usr/bin/env ruby

class WkndrExample < Wkndr
  def default
    continous.loop("window", 512, 512, 60) { |gl|
      log! :loop

      gl.lookat(0, 0.0, 500.0, 0.0, 0.0, 0.0, 0.01, 200.0)

      gl.play { |global_time, delta_time|
        log! :play, global_time, delta_time

        gl.drawmode {
          log! :draw

          gl.twod {
            log! :twod

            gl.button(0.0, 0.0, 250.0, 20.0, "start") {
              #TODO: onclick
            }
          }
        }
      }
    }
  end
end

WkndrExample.start(ARGV)
