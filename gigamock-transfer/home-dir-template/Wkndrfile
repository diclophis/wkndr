#

Wkndr.play { |gl|
  gl.lookat(0, 0.0, 500.0, 0.0, 0.0, 0.0, 0.01, 200.0)
 
  total_msg = 0
  cube = Cube.new(1.0, 1.0, 1.0, 20.0)
  speed = 100.0

  gl.event { |typed_msg|
    total_msg += 1
  }
 
  gl.update { |global_time, delta_time|
    gl.drawmode {
      gl.threed {
        cube.draw(true)
        cube.deltar(1.0, 1.0, 1.0, global_time * speed)
      }
    }
  }
}
